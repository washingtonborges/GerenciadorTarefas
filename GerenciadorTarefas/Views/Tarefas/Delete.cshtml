@model GerenciadorTarefas.Models.Tarefa
<!-- Modal -->
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="TituloModalCentralizado">Apagar Tarefa</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <h2>
                @Html.DisplayFor(model => model.Titulo)
            </h2>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <input type="submit" value="Apagar" class="btn btn-default" />
                }
            </div>
        </div>
    </div>
</div>
<script>
        $(function () {
            $('form').on('submit', function (event) {
                var r = confirm("Clique em OK para apagar definitivamente a tarefa.");
                if (r == false) {
                    $("#modal").modal('hide');
                    return false;
                }
            });
        })
</script>
}
