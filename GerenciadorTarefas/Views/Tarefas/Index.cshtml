@model IEnumerable<GerenciadorTarefas.Models.Tarefa>

@{
    ViewBag.Title = "Tarefas";
}

<h2>Tarefas</h2>

<p>
    @Html.ActionLink("Nova Tarefa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Concluida)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concluida)
            </td>
            <td>
                <button class="btn btn-light edit" data-id="@item.TarefaId">Editar</button>
            </td>
        </tr>
    }
</table>
<div class="modal" id="modal">
</div>
@section scripts{
    <script>
        $(function () {
            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("/Tarefas/Edit?id=" + id, function () {
                    $("#modal").modal('show');
                })
            });
        })
    </script>
}