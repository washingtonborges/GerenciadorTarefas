@model GerenciadorTarefas.Models.Tarefa

@{
    ViewBag.Title = "Edit";
}
<!-- Modal -->
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Editar Tarefa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TarefaId)
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Alterar" class="btn-inserir btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
@section scripts{
    <script>
        $(function () {
            $('form').on('submit', function (event) {
                var r = confirm("Clique em OK para continuar e Cancelar para desistir.");
                if (r == false) {
                    $("#modal").modal('hide');
                    return false;
                }
            });
        })
    </script>
}
